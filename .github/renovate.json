{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:js-lib"],
  "dependencyDashboard": true,
  "configMigration": true,
  "timezone": "America/New_York",
  "assignees": ["drichar"],
  "baseBranches": ["main"],
  "schedule": "on the 1st day of the month",
  "ignorePaths": ["**/node_modules/**"],
  "semanticCommitScope": "deps",
  "packageRules": [
    {
      "matchCategories": ["node"],
      "enabled": false
    }
  ],
  "npm": {
    "lockFileMaintenance": {
      "enabled": true,
      "schedule": "on the 2nd day of the month"
    },
    "minimumReleaseAge": "3 days",
    "packageRules": [
      {
        "groupName": "algosdk",
        "matchPackageNames": ["algosdk"],
        "matchUpdateTypes": ["patch", "minor", "major"]
      },
      {
        "groupName": "non-major dependencies",
        "matchUpdateTypes": ["patch", "minor"],
        "matchFileNames": ["package.json"]
      },
      {
        "groupName": "non-major package dependencies",
        "matchUpdateTypes": ["patch", "minor"],
        "matchFileNames": ["packages/**"],
        "matchPackageNames": ["!algosdk"]
      },
      {
        "groupName": "non-major example dependencies",
        "matchUpdateTypes": ["patch", "minor"],
        "matchFileNames": ["examples/**"],
        "matchPackageNames": ["!algosdk"]
      },
      {
        "matchDepTypes": ["engines"],
        "enabled": false
      }
    ]
  }
}
